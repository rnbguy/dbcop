{
  "nodeModulesDir": "auto",
  "exclude": [
    ".sisyphus",
    ".omc",
    ".claude",
    "node_modules",
    "wasmlib",
    "target"
  ],
  "tasks": {
    "wasmbuild": "deno run -A jsr:@deno/wasmbuild@0.21.0 --project dbcop_wasm --out wasmlib",
    "prepare": "deno run -A npm:husky",
    "deno:fmt": "deno fmt --check",
    "deno:lint": "deno lint",
    "deno:check": "deno check",
    "schema:check": "deno run -A schemas/validate.ts",
    "deno:ci": {
      "dependencies": [
        "deno:fmt",
        "deno:lint",
        "deno:check",
        "schema:check"
      ]
    }
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.19",
    "@std/fs": "jsr:@std/fs@1",
    "ajv": "npm:ajv@8"
  }
}
